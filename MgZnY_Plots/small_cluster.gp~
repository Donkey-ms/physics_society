set xtics 1
set yl "Total energy[eV]"
set xl "distance from cluster"
set xrange[0:8]

set tics font "Helvetica,20"
set xlabel font "Helvetica,25" # xlabelのフォントの変更
set ylabel font "Helvetica,25" # ylabelのフォントの変更

set xtics ('1-layer' 1,'2-layer' 2,'3-layer' 3,'4-layer' 4,'5-layer' 5,'6-layer' 6,'7-layer' 7)